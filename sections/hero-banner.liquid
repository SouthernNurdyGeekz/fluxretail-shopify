{% schema %}
{"name":"FluxRetail Hero","settings":[
 {"type":"text","id":"heading","label":"Heading","default":"FluxRetail"},
 {"type":"text","id":"subheading","label":"Subheading","default":"Paste link -> preview -> publish everywhere"},
 {"type":"text","id":"cta_label","label":"CTA Label","default":"Browse"},
 {"type":"url","id":"cta_url","label":"CTA Link","default":"/collections/all"},
 {"type":"image_picker","id":"bg","label":"Background image"}
],"presets":[{"name":"FluxRetail Hero"}]}
{% endschema %}
<section style="min-height:40vh;background:#100a22;color:#d5d8de">
  <div style="position:relative;min-height:40vh;background-size:cover;background-position:center;
              background-image:url({% if section.settings.bg %}{{ section.settings.bg | image_url }}{% else %}{{ 'flux-starfield.jpg' | asset_url }}{% endif %});">
    <div style="position:absolute;inset:0;background:linear-gradient(transparent,rgba(16,10,34,.6))"></div>
    <div style="position:relative;display:grid;place-items:center;min-height:40vh;text-align:center;padding:32px">
      <div>
        <h1 style="margin:0 0 .5rem 0;font-size:42px">{{ section.settings.heading }}</h1>
        <p style="margin:0 0 1rem 0;font-size:18px">{{ section.settings.subheading }}</p>
        <a href="{{ section.settings.cta_url }}" style="border:1px solid currentColor;padding:.6rem 1rem;text-decoration:none">{{ section.settings.cta_label }}</a>
      </div>
    </div>
  </div>
</section>
